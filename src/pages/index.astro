---
import FeaturedLayout from "@layouts/FeaturedLayout.astro";
import MainLayout from "@layouts/MainLayout.astro";
import StandardLinkLayout from "@layouts/StandardLinkLayout.astro";

import Avatar from "@components/Avatar.astro";
import FeaturedLink from "@components/FeaturedLink.astro";
import StandardLink from "@components/StandardLink.astro";
import SocialFooter from "@components/SocialFooter.astro";
---

<MainLayout title="My Links">
  <Avatar />
  <FeaturedLayout>
    <FeaturedLink
      featuredLinkIcon="mdi:github"
      featuredLinkTitle="Github"
      featuredLinkPath="https://github.com/rmbarley"
    />
    <FeaturedLink
      featuredLinkIcon="ic:round-portrait"
      featuredLinkTitle="My Portfolio"
      featuredLinkPath="https://ryanbarley.com"
    />
  </FeaturedLayout>
  <StandardLinkLayout>
    <StandardLink
      linkTitle="LinkedIn"
      linkDescription=""
      linkIcon="ri:linkedin-box-line"
      linkPath="https://linkedin.com/in/rmbarley"
    />
    <StandardLink
      linkTitle="Polywork"
      linkIcon="simple-icons:polywork"
      linkPath="https://polywork.com/ryan_barley"
    />
    <StandardLink
      linkTitle="Twitter"
      linkIcon="mdi:twitter"
      linkPath="https://twitter.com/ryanbarleydev"
    />
  </StandardLinkLayout>
  <SocialFooter />
</MainLayout>
